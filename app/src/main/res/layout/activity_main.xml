<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/choose_language_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a language:"
        android:paddingRight="5dp"/>


    <ListView
        android:id="@+id/language_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak the language"
        android:layout_marginTop="16dp" /> <!-- Adjust margin as needed -->

    <EditText
        android:id="@+id/speaker_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text" />

</LinearLayout>
